<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/button_waitListActivity"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:text="대기자 명단"
            android:textSize="45dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp" />

    <Button
            android:id="@+id/button_callActivity"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:text="CALL"
            android:textSize="45dp"
            app:layout_constraintTop_toBottomOf="@id/button_waitListActivity"
            tools:layout_editor_absoluteX="0dp" />

    <Button
            android:id="@+id/button_settingActivity"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:text="설정"
            android:textSize="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_callActivity"
            tools:layout_editor_absoluteX="31dp" />
</androidx.constraintlayout.widget.ConstraintLayout>