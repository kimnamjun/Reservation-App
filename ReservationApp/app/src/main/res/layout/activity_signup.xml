<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/textView_signUpActTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"

            android:text="회원가입"
            android:textSize="15dp"/>

    <TextView
            android:id="@+id/textView_signUpActID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textView_signUpActTitle"
            app:layout_constraintLeft_toLeftOf="@id/editText_signUpActID"
            android:layout_marginTop="30dp"

            android:text="이메일"
            android:textSize="10dp"/>

    <EditText
            android:id="@+id/editText_signUpActID"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textView_signUpActID"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:hint="E-mail"
            android:inputType="textEmailAddress"/>

    <TextView
            android:id="@+id/textView_signUpActPW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/editText_signUpActID"
            app:layout_constraintLeft_toLeftOf="@id/editText_signUpActPW"
            android:layout_marginTop="30dp"

            android:text="비밀번호"
            android:textSize="10dp"/>

    <EditText
            android:id="@+id/editText_signUpActPW"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textView_signUpActPW"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:hint="Password"
            android:inputType="textPassword"/>

    <TextView
            android:id="@+id/textView_signUpActPWConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/editText_signUpActPW"
            app:layout_constraintLeft_toLeftOf="@id/editText_signUpActPWConfirm"
            android:layout_marginTop="30dp"

            android:text="비밀번호 확인"
            android:textSize="10dp"/>

    <EditText
            android:id="@+id/editText_signUpActPWConfirm"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textView_signUpActPWConfirm"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:hint="Password"
            android:inputType="textPassword"/>

    <Button
            android:id="@+id/button_signUpActSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/editText_signUpActPWConfirm"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"

            android:text="회원 가입"/>

</androidx.constraintlayout.widget.ConstraintLayout>

